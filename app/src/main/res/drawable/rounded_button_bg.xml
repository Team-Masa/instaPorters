<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <solid android:color="#408DCF"></solid>
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#408DCF" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <solid android:color="@color/blue_icon"></solid>
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/blue_icon" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <solid android:color="@color/blue_icon"></solid>
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/blue_icon" />
        </shape>
    </item>
</selector>
