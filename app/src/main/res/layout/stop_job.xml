<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_centerHorizontal="true"
    android:layout_width="250dp"
    android:id="@+id/like_image"
    android:layout_height="250dp"
    android:src="@drawable/like"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/like_image"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/thankyou_msg"
        android:text="@string/thankyou"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00a914"
        android:textColor="#FFF"
        android:paddingTop="10dp"
        android:id="@+id/moreJobs"
    android:layout_below="@+id/thankyou_msg"
        android:text="@string/searchmore"/>
</RelativeLayout>