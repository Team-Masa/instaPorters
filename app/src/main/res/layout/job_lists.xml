<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <FrameLayout
        android:id="@+id/tutrial_overlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#c0000000"
        android:visibility="gonex">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/left_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#FFF"
                    android:layout_toRightOf="@+id/swipeLeftIcon"
                    android:text="Swipe Left to reject"
                    android:textSize="24dp" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/swipeLeftIcon"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/swipe" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:paddingLeft="10dp">

                <ImageView
                    android:rotation="180"
                    android:id="@+id/swipeRightIcon"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:src="@drawable/swipe" />

                <TextView
                    android:id="@+id/leftText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#FFF"
                    android:layout_toRightOf="@+id/swipeRightIcon"
                    android:text="Swipe Right to accept"
                    android:textSize="24dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Got it!"
                    android:onClick="fadeTutorial"/>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
<android.support.v7.widget.RecyclerView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/listview"
    android:scrollbars="vertical"
    android:divider="@android:color/transparent"
    android:dividerHeight="16dp">

</android.support.v7.widget.RecyclerView>

</LinearLayout>